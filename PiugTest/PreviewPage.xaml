<Page
    x:Class="PiugTest.PreviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiugTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#02042F">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="LogoutButton"
            Content="Back"
            Click="LogoutButton_Click"
            Background="#E53935"
            Foreground="White"
            Width="90"
            Height="35"
            Margin="20,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderThickness="0"
            CornerRadius="8"/>
        <Button x:Name="SwitchBackgroundButton"
              Content="ðŸŒ—"
              Width="50"
              Height="50"
              FontSize="20"
              Background="#444"
              Foreground="White"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Margin="0,10,10,0"
               Click="SwitchBackgroundButton_Click"
              BorderThickness="0"
              CornerRadius="25"/>
        <Button x:Name="ChangeTextColorButton"
            Content="ðŸŽ¨"
            Click="ChangeTextColorButton_Click"
            Width="50"
            Height="50"
            FontSize="20"
            Background="#444"
            Foreground="White"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,70,0"
            BorderThickness="0"
            CornerRadius="25"/>

        <!-- Header cu logo -->
        <Grid Grid.Row="0" Margin="0,10,0,0" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/LogoOnly.png"
                       Width="80"
                       Height="80"
                       Stretch="Uniform" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="PixelForge"
                               Foreground="White"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Left" />
                    <TextBlock Text="BUILT FOR PERFORMANCE. MADE FOR YOU."
                               Foreground="#38BDF8"
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- ConÈ›inut principal cu douÄƒ carduri -->
        <Grid Grid.Row="1"
      Margin="20,40"
      HorizontalAlignment="Center">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Vertical"
                    Spacing="50"
                    HorizontalAlignment="Center">

                    <!-- Card 1 -->
                    <Border CornerRadius="12"
                         Background="#1A1A2E"
                         Width="1500"
                         Height="375"
                         HorizontalAlignment="Center">
                        <Grid>
                            <StackPanel Margin="20"
                                 VerticalAlignment="Center"
                                 Orientation="Horizontal"
                                 HorizontalAlignment="Center"
                                 Spacing="80">

                                <!-- AMD 1000$ -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <Button Width="275" Height="275" BorderThickness="0" Background="Transparent" Click="AMD1Button_Click">
                                        <Image Source="Assets/AMD1.png"
                                             Width="250"
                                             Height="250"
                                             Stretch="UniformToFill"/>
                                    </Button>
                                    <TextBlock Text="AMD - 1000$"
                                       Foreground="White"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- INTEL 1000$ -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <Button Width="275" Height="275" BorderThickness="0" Background="Transparent">
                                    <Image Source="Assets/INTEL1.png"
                                         Width="250"
                                         Height="250"
                                         Stretch="UniformToFill"/>
                                    </Button>
                                    <TextBlock Text="INTEL - 1000$"
                                         Foreground="White"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         HorizontalAlignment="Center"
                                         Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- AMD 2000$ -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <Button Width="275" Height="275" BorderThickness="0" Background="Transparent">
                                    <Image Source="Assets/AMD2.png"
                                        Width="250"
                                        Height="250"
                                        Stretch="UniformToFill"/>
                                    </Button>
                                    <TextBlock Text="AMD - 2000$"
                                        Foreground="White"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        HorizontalAlignment="Center"
                                        Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- INTEL 2000$ -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <Button Width="275" Height="275" BorderThickness="0" Background="Transparent">
                                    <Image Source="Assets/INTEL2.png"
                                        Width="250"
                                        Height="250"
                                        Stretch="UniformToFill"/>
                                    </Button>
                                    <TextBlock Text="INTEL - 2000$"
                                        Foreground="White"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        HorizontalAlignment="Center"
                                        Margin="0,10,0,0"/>
                                </StackPanel>

                            </StackPanel>

                            <!-- Titlu -->
                            <TextBlock Text="GAMING BUILDS"
                                Foreground="White"
                                FontSize="20"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                 Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <!-- Card 2 -->
                    <Border CornerRadius="12"
      Background="#1A1A2E"
      Width="1500"
      Height="375"
      HorizontalAlignment="Center">
                        <Grid>
                            <StackPanel Margin="20"
              VerticalAlignment="Center"
              Orientation="Horizontal"
              HorizontalAlignment="Center"
              Spacing="80">

                                <!-- AMD 3000$ -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <Button Width="275" Height="275" BorderThickness="0" Background="Transparent">
                                        <Image Source="Assets/AMDS1.png"
                          Width="250"
                          Height="250"
                          Stretch="UniformToFill"/>
                                    </Button>
                                    <TextBlock Text="AMD - 3000$"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- INTEL 3000$ -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <Button Width="275" Height="275" BorderThickness="0" Background="Transparent">
                                        <Image Source="Assets/INTELS1.png"
                      Width="250"
                      Height="250"
                      Stretch="UniformToFill"/>
                                    </Button>
                                    <TextBlock Text="INTEL - 3000$"
                      Foreground="White"
                      FontSize="16"
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"
                      Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- AMD 4000$ -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <Button Width="275" Height="275" BorderThickness="0" Background="Transparent">
                                        <Image Source="Assets/AMDS2.png"
                     Width="250"
                     Height="250"
                     Stretch="UniformToFill"/>
                                    </Button>
                                    <TextBlock Text="AMD - 4000$"
                     Foreground="White"
                     FontSize="16"
                     FontWeight="SemiBold"
                     HorizontalAlignment="Center"
                     Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- INTEL 4000$ -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <Button Width="275" Height="275" BorderThickness="0" Background="Transparent">
                                        <Image Source="Assets/INTELS2.png"
                     Width="250"
                     Height="250"
                     Stretch="UniformToFill"/>
                                    </Button>
                                    <TextBlock Text="INTEL - 4000$"
                     Foreground="White"
                     FontSize="16"
                     FontWeight="SemiBold"
                     HorizontalAlignment="Center"
                     Margin="0,10,0,0"/>
                                </StackPanel>

                            </StackPanel>

                            <!-- Titlu -->
                            <TextBlock Text="STREAMING BUILDS"
             Foreground="White"
             FontSize="20"
             FontWeight="SemiBold"
             HorizontalAlignment="Center"
             VerticalAlignment="Top"
              Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>



        <!-- Footer -->
        <Grid Grid.Row="2" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <TextBlock
                Text="Â© 2025 PixelForge. All rights reserved."
                Foreground="White"
                FontSize="12"
                HorizontalAlignment="Center"
                Opacity="0.6"/>
        </Grid>
    </Grid>
</Page>
