<Page
    x:Class="PiugTest.BuildPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiugTest"
    Background="#02042F">

    <Grid>
        
        <!-- Definim 3 rÃ¢nduri: Header, conÈ›inut, footer -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- ConÈ›inut scrollabil -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>
        <Button x:Name="LogoutButton"
            Content="Back"
            Click="LogoutButton_Click"
            Background="#E53935"
            Foreground="White"
            Width="90"
            Height="35"
            Margin="20,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderThickness="0"
            CornerRadius="8"/>
        <Button x:Name="SwitchBackgroundButton"
             Content="ðŸŒ—"
             Width="50"
             Height="50"
             FontSize="20"
             Background="#444"
             Foreground="White"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             Margin="0,10,10,0"
             Click="SwitchBackgroundButton_Click"
             BorderThickness="0"
             CornerRadius="25"/>
        <Button x:Name="ChangeTextColorButton"
            Content="ðŸŽ¨"
            Click="ChangeTextColorButton_Click"
            Width="50"
            Height="50"
            FontSize="20"
            Background="#444"
            Foreground="White"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,70,0"
            BorderThickness="0"
            CornerRadius="25"/> 



        <!-- HEADER FIX -->
        <Grid Grid.Row="0" Margin="0,10,0,10" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/LogoOnly.png"
                       Width="80"
                       Height="80"
                       Stretch="Uniform" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="PixelForge"
                               Foreground="White"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Left" />
                    <TextBlock Text="BUILT FOR PERFORMANCE. MADE FOR YOU."
                               Foreground="#38BDF8"
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- CONÈšINUT SCROLLABIL -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <Border Margin="20,30" Padding="20" Background="#1A1A2E" CornerRadius="12" HorizontalAlignment="Stretch">
                <StackPanel Spacing="30">

                    <!-- TITLU PAGINÄ‚ -->
                    <TextBlock Text="Configurare PC personalizat"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,10"/>

                    <!-- TABURI -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                        <Button Content="PC predefinit"
                        Background="#1A1A2E"
                        Foreground="White"
                        Width="140"
                        Height="35"
                        BorderThickness="0"
                        CornerRadius="8"/>
                        <Button Content="Personalizat"
                        Background="#2563EB"
                        Foreground="White"
                        Width="140"
                        Height="35"
                        BorderThickness="0"
                        CornerRadius="8"/>
                    </StackPanel>

                    <!-- CONTROALE SELECTARE COMPONENTE (centrate, fixe 300 lÄƒÈ›ime) -->
                    <StackPanel Spacing="20" Margin="0,20,0,0" HorizontalAlignment="Center">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Procesor:" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="ProcesorComboBox" PlaceholderText="SelecteazÄƒ" Width="300" Height="40" CornerRadius="6" DisplayMemberPath="Nume" SelectionChanged="ProcesorComboBox_SelectionChanged"/>
                            <Border Grid.Column="2" Background="White" CornerRadius="6" Height="40" VerticalAlignment="Center" Padding="10,0" Margin="10,0,0,0">
                                <TextBlock x:Name="PretProcesor" Text="0 RON" Foreground="#02042F" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <Grid VerticalAlignment="Center" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Cooler:" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="CoolerComboBox" PlaceholderText="SelecteazÄƒ" Width="300" Height="40" CornerRadius="6" DisplayMemberPath="Nume" SelectionChanged="CoolerComboBox_SelectionChanged"/>
                            <Border Grid.Column="2" Background="White" CornerRadius="6" Height="40" VerticalAlignment="Center" Padding="10,0" Margin="10,0,0,0">
                                <TextBlock x:Name="PretCooler" Text="0 RON" Foreground="#02042F" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <Grid VerticalAlignment="Center" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="PlacÄƒ:" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="PlaciComboBox" PlaceholderText="SelecteazÄƒ" Width="300" Height="40" CornerRadius="6" DisplayMemberPath="Nume" SelectionChanged="PlaciComboBox_SelectionChanged"/>
                            <Border Grid.Column="2" Background="White" CornerRadius="6" Height="40" VerticalAlignment="Center" Padding="10,0" Margin="10,0,0,0">
                                <TextBlock x:Name="PretPlaca" Text="0 RON" Foreground="#02042F" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <Grid VerticalAlignment="Center"  Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="RAM:" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="RAMComboBox" PlaceholderText="SelecteazÄƒ" Width="300" Height="40" CornerRadius="6" DisplayMemberPath="Nume" SelectionChanged="RAMComboBox_SelectionChanged"/>
                            <Border Grid.Column="2" Background="White" CornerRadius="6" Height="40" VerticalAlignment="Center" Padding="10,0" Margin="10,0,0,0">
                                <TextBlock x:Name="PretRAM" Text="0 RON" Foreground="#02042F" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <Grid VerticalAlignment="Center" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Stocare:" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="StorageComboBox" PlaceholderText="SelecteazÄƒ" Width="300" Height="40" CornerRadius="6" DisplayMemberPath="Nume" SelectionChanged="StorageComboBox_SelectionChanged"/>
                            <Border Grid.Column="2" Background="White" CornerRadius="6" Height="40" VerticalAlignment="Center" Padding="10,0" Margin="10,0,0,0">
                                <TextBlock x:Name="PretStorage" Text="0 RON" Foreground="#02042F" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <Grid VerticalAlignment="Center" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="GPU:" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="PlaciVideoComboBox" PlaceholderText="SelecteazÄƒ" Width="300" Height="40" CornerRadius="6" DisplayMemberPath="Nume" SelectionChanged="PlaciVideoComboBox_SelectionChanged"/>
                            <Border Grid.Column="2" Background="White" CornerRadius="6" Height="40" VerticalAlignment="Center" Padding="10,0" Margin="10,0,0,0">
                                <TextBlock x:Name="PretPlacaVideo" Text="0 RON" Foreground="#02042F" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <Grid VerticalAlignment="Center" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="SursÄƒ:" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="SursaComboBox" PlaceholderText="SelecteazÄƒ" Width="300" Height="40" CornerRadius="6" DisplayMemberPath="Nume" SelectionChanged="SursaComboBox_SelectionChanged"/>
                            <Border Grid.Column="2" Background="White" CornerRadius="6" Height="40" VerticalAlignment="Center" Padding="10,0" Margin="10,0,0,0">
                                <TextBlock x:Name="PretSursa" Text="0 RON" Foreground="#02042F" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Carcasa:" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="CarcasaComboBox" PlaceholderText="SelecteazÄƒ" Width="300" Height="40" CornerRadius="6" DisplayMemberPath="Nume" SelectionChanged="CarcasaComboBox_SelectionChanged"/>
                            <Border Grid.Column="2" Background="White" CornerRadius="6" Height="40" VerticalAlignment="Center" Padding="10,0" Margin="10,0,0,0">
                                <TextBlock x:Name="PretCarcasa" Text="0 RON" Foreground="#02042F" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <Grid VerticalAlignment="Center" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="PreÈ› Total:" Foreground="White" VerticalAlignment="Center" FontSize="18" FontWeight="SemiBold" Margin="0,0,10,0"/>

                            <Border Grid.Column="1" Background="White" CornerRadius="6" Width="150" Height="40"  VerticalAlignment="Center" Padding="10,0">
                                <TextBlock x:Name="PretTotalText" Text="0 RON" Foreground="#02042F" VerticalAlignment="Center" FontSize="18" HorizontalAlignment="Center" FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- BUTON FINALIZARE -->
                    <Button Content="Finalizare"
                    Background="#2563EB"
                    Foreground="White"
                    Width="200"
                    Height="45"
                    CornerRadius="22.5"
                    BorderThickness="0"
                    Margin="0,30,0,0"
                    HorizontalAlignment="Center"/>

                </StackPanel>
            </Border>
        </ScrollViewer>


        <!-- FOOTER FIX -->
        <Grid Grid.Row="2" VerticalAlignment="Bottom" Margin="0,0,0,10" HorizontalAlignment="Center">
            <TextBlock
                Text="Â© 2025 PixelForge. All rights reserved."
                Foreground="White"
                FontSize="12"
                Opacity="0.6"
                HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
